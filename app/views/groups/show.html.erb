<p id="notice"><%= notice %></p>

<p>
  <strong>Groupid:</strong>
  <%= @group.groupId %>
</p>

<p>
  <strong>Group Leader:</strong>
  <%= User.where(studentId: @group.leaderInt).first ? User.where(studentId: @group.leaderInt).first.firstName : "None"  %>
</p>

<p>
  <strong>Members:</strong>
</p>
  <%User.where(groupId: @group.groupId).where.not(studentId: @group.leaderInt).each do |user| %>
    <tr>
      <td><%=user.firstName%> </td>
      <td><%=user.lastName%> </td>
      <td><%= link_to 'Show', user%> </td>
    </tr>
    <br/>
<% end %>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
